<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/CategoryFragment">

    <fragment
        android:id="@+id/FirstFragment"
        android:name="pl.matiu.pantrytrack.fragments.firstfragment.FirstFragment"
        android:label="@string/first_fragment_label"
        tools:layout="@layout/fragment_first">

        <argument
            android:name="type"
            app:argType="string"
            android:defaultValue="" />

        <argument
            android:name="ean_code"
            app:argType="string"
            android:defaultValue="" />

        <argument
            android:name="amount"
            app:argType="string"
            android:defaultValue="" />

        <argument
            android:name="price"
            app:argType="string"
            android:defaultValue="" />

        <action
            android:id="@+id/action_FirstFragment_to_BarCodeFragment"
            app:destination="@id/BarCodeFragment" />

        <action
            android:id="@+id/action_FirstFragment_to_ScannerFragment"
            app:destination="@id/ScannerFragment" />

        <action
            android:id="@+id/action_FirstFragment_to_ShoppingListFragment"
            app:destination="@id/ShoppingListFragment" />

        <action
            android:id="@+id/action_FirstFragment_self"
            app:destination="@+id/FirstFragment"
            />
    </fragment>

    <fragment
        android:id="@+id/BarCodeFragment"
        android:name="pl.matiu.pantrytrack.fragments.barcodeScannerFragment.BarCodeFragment"
        android:label="@string/bar_code_fragment">

        <action
            android:id="@+id/toFirstFragmentPage"
            app:destination="@id/FirstFragment"
            app:launchSingleTop="true" />
    </fragment>

    <fragment
        android:id="@+id/ScannerFragment"
        android:name="pl.matiu.pantrytrack.fragments.scannerFragment.ProductScannerFragment"
        android:label="@string/bar_code_fragment"
        tools:layout="@layout/fragment_product_scanner">

        <action
            android:id="@+id/toFirstFragmentPage"
            app:destination="@id/FirstFragment"
            app:launchSingleTop="true" />
    </fragment>

    <fragment
        android:id="@+id/CategoryFragment"
        android:name="pl.matiu.pantrytrack.fragments.categoryFragment.CategoryFragment"
        android:label="@string/bar_code_fragment"
        tools:layout="@layout/fragment_category">

        <action
            android:id="@+id/fromCategoryToFirstFragmentPage"
            app:destination="@id/FirstFragment"
            app:launchSingleTop="true" />

        <action
            android:id="@+id/action_FirstFragment_to_ScannerFragment"
            app:destination="@id/ScannerFragment" />

        <action
            android:id="@+id/action_FirstFragment_to_ShoppingListFragment"
            app:destination="@id/ShoppingListFragment" />

        <action
            android:id="@+id/action_CategoryFragment_self"
            app:destination="@+id/CategoryFragment"
            />
    </fragment>

    <fragment
        android:id="@+id/ShoppingListFragment"
        android:name="pl.matiu.pantrytrack.fragments.shoppingListFragment.ShoppingListFragment"
        android:label="@string/bar_code_fragment"
        tools:layout="@layout/fragment_shopping_list">
    </fragment>


</navigation>